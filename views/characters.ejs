<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <ul>
    <% if (locals.chars) {%>
      <% chars.forEach(char => { %>
        <li>
          ID: <%= char.id %>, 
          Name: <%= char.name %>, 
          Race: <%= char.race %>,
          Date of Birth: <%= char.birth %>,
          Date of Death: <%= char.death %>,
          Gender: <%= char.gender %>,
          Realm: <%= char.realm %>
        </li>
        <a href="characters/<%= char.id %>/update"><button type="button">Update</button></a>
        <form action="characters/<%= char.id %>/delete" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this character?');">Delete</button>
        </form>
      <% }); %>
    <% } %>
  </ul>
  <a href="/characters/add">Create a new character</a>
</body>
</html>