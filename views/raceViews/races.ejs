<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <ul>
    <% if (locals.races) {%>
      <% races.forEach(race => { %>
        <li>
          Name: <%= race.name %>, 
        </li>
        <a href="/races/<%= race.name %>/update"><button type="button">Update</button></a>
        <form action="/races/<%= race.name %>/delete" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this race?');">Delete</button>
        </form>
      <% }); %>
    <% } %>
  </ul>
  <a href="/races/add">Create a new race</a>
</body>
</html>