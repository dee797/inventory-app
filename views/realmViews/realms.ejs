<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <ul>
    <% if (locals.realms) {%>
      <% realms.forEach(realm => { %>
        <li>
          Name: <%= realm.name %>, 
        </li>
        <a href="/realms/<%= realm.name %>/update"><button type="button">Update</button></a>
        <form action="/realms/<%= realm.name %>/delete" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this realm?');">Delete</button>
        </form>
      <% }); %>
    <% } %>
  </ul>
  <a href="/realms/add">Create a new realm</a>
</body>
</html>